<article class="teaser mediumTile">
    <a href="{{ article.url }}" class="mediumTile__link"></a>
    <div class="mediumTile__content">
        <h3 class="teaser__title">{{article.data.title}}</h3>
        <p class="teaser__copy">{{article.data.description}}</p>
    </div>
    <span class="mediumTile__gradient"></span>
    <img src="/assets/{{article.data.image}}" alt="{{article.data.title}}" class="mediumTile__image">
    
</article>